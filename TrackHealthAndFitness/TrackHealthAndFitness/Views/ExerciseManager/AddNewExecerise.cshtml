<body>
    <div class="tile is-ancestor" style="margin-left: 20%; margin-right: 20%;">
        <!--First Column-->
        <div class="tile is-parent">
            <!--Getting the Type Of Content From the User-->
            <article class="tile is-child is-12 notification content-box-boxshadow">
                <label for="stylebox">Choose the body part for the exercise:</label>
                <select name="exercisebodypart" id="exercisebodypartbox">
                    <option value="Abs">Abs</option>
                    <option value="Back">Back</option>
                    <option value="Biceps">Biceps</option>
                    <option value="Cardio">Cardio</option>
                    <option value="Chest">Chest</option>
                    <option value="Legs">Legs</option>
                </select>

                <form>
                    <div class="form-group">
                        <label for="">Exercise Name</label>
                        <input type="text" class="form-control" id="enterBoxName" value="" aria-describedby="enterTitle" placeholder="Enter Title">
                    </div>
                </form>
                <!-- Submit Button -->
                <div class="ml-5">
                    <button class="button is-purple" onclick="SubmitExercise()"> Submit</button>
                </div>
            </article>
            </div>
        </div>
</body>

<script>
    var url = "/managecontent/api/addcontentbox";
    function SubmitExercise() {
        const exercise = {
            exerciseType: $("#exercisebodypartbox :selected").text(),
            exerciseName: document.getElementById('enterBoxName').value
        };
        $.post("/ExerciseManager/AddTypeOfExercise",
            exercise,
            function(data) {
                RedirectToPage('@Html.Raw(Url.Action("SelectExercise", "ExerciseManager"))');
            });
    }

</script>